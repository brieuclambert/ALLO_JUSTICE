<div class="container">
  <h1> Découvrez <%= @project.name %> </h1>
  <div class="row" style="margin: 10px">
    <div class="col-xs-12 col-sm-9">
      <div class="row">
        <div class="col-xs-2" style="background-image: url('<% if @project.photo? %><%= cl_image_path(@project.photo.path, width: 100, height: 150, crop: :fill)%> <% end %>')">
          <br/><br/><br/><br/><br/><br/>
        </div>
        <div class="col-xs-10">
          <h2><%= @sum %> € sur <%= @project.goal %>€</h2>
          <div class="progress">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= @percentage%>%;">
                <%= @percentage%>%
              </div>
            </div>
          </div>
          <p> <%= @elapsed_day %> jours restants </p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <p><%= @project.user.first_name %> <%= @project.user.last_name %></p>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-3">
      <%= simple_form_for [@project, @contribution] do |f| %>
      <%= f.input :amount %>
      <%= f.submit "Participez", class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>

  <div class="row" style="margin: 10px">
    <h3>Description </h3>
    <p><%= @project.description %></p>
  </div>

  <div class="row" style="margin: 10px">
    <div class="col-xs-12 col-sm-8">
      <h3> Ils ont soutenu cette cause</h3>
      <ul><% @contributions.each do |contribution| %>
        <li><p> : <%= contribution.amount %> €</p></li>
        <% end %></ul>
      </div>
      <div class="col-xs-12 col-sm-4">
        <h3>Check avaibility</h3>
        <% @bookings.each do |booking| %>
        <p> : <%= booking.date %> </p>
        <% end %>
      </div>
    </div>

    <div class="container">
      <%= simple_form_for [@project, @booking] do |f| %>
      <div class="input-group input-daterange" style="width: 300px">
        <%= f.input :date, as: :string, input_html: { class: "form-control datepicker"} %>
        <span class="input-group-addon">to</span>
        <%= f.input :date, as: :string, input_html: { class: "form-control datepicker"} %>
      </div>
      <br>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>

</div>
<%= @project.address %>
<%= @project.latitude %>
<%= @project.longitude %>




<div id="map" style="height: 300px; width: 300px">
    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers([{ lat: <%= @project.latitude %>, lng: <%= @project.longitude %> }]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
</div>


<% content_for :after_js do %>
<script>
   $(document).ready(function() {
   alert('<%= j @alert_message %>');
 });
</script>
<% end %>


