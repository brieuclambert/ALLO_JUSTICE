
<div class="wrapper">
  <div class="container">

  <div class="row title">
    <h1> <%= @project.name %> </h1>
  </div>

  <div class="row">
      <!-- Photo + Progress bar + Amount -->
        <!-- Photo + User name -->
        <div class="col-xs-3">
          <div style="width: 100%; height: 150px;background-image: url('<% if @project.photo? %><%= cl_image_path(@project.photo.path,  :width => 300,  :crop => :limit)%> <% end %>')">
          </div>
          <div style="margin-top:10px">
          <p>Par <%= @project.user.first_name %> <%= @project.user.last_name %></p>
          </div>
        </div>
        <!-- Progress bar -->
        <div class="col-xs-6">
          <h2><%= @sum %> € sur <%= @project.goal %>€</h2>
          <div class="progress">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= @percentage%>%;">
                <%= @percentage%>%
              </div>
            </div>
          </div>
          <p> <%= @elapsed_day %> jours restants </p>
        </div>
        <!-- Progress bar -->
        <div class="col-xs-12 col-sm-3" style="padding:20px">
          <%= simple_form_for [@project, @contribution] do |f| %>
          <%= f.input :amount %>
          <%= f.submit "Participez", class: "btn btn-primary" %>
          <% end %>
        </div>
    </div>

    <div class="row">
      <!-- Navbar internal -->
      <div class="col-xs-9">
        <div class="tabs">
          <a class="tab active">
            <h3>Général</h3>
          </a>
          <a class="tab">
            <h3>Carte</h3>
          </a>
          <a class="tab">
            <h3>Rencontrez l'avocat</h3>
          </a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 content">
      <!-- Description -->
        <div class="col-xs-12 col-sm-8">
          <h3>Description</h3>
          <p><%= @project.description %></p>
        </div>
        <div class="col-xs-12 col-sm-4 contribution-show">
          <h3 style="width:100%">Les contributions</h3>
          <div class="contribution-show-card">
            <i class="fa fa-money" aria-hidden="true"></i>
          </div>
          <div class="contribution-show-card">
            150 €
          </div>
          <div class="contribution-show-card">
            150 €
          </div>
          <div class="contribution-show-card">
            150 €
          </div>


        </div>
      </div>
    </div>




<div class="row" style="margin: 10px">
  <div class="col-sm-8">
    <h3>Description </h3>
    <p><%= @project.description %></p>
  </div>


  <div class="col-sm-4">
    <div class="row row-show-no-padding">
      <div class="col-xs-12 col-sm-12">
        <h3>Ils ont soutenu cette cause</h3>
        <ul><% @contributions.each do |contribution| %>
          <li><p> : <%= contribution.amount %> €</p></li>
          <% end %></ul>
        </div>
        <div class="row row-show-no-padding">
          <div class="col-xs-12 col-sm-12">
            <h3> Check avaibility</h3>
            <ul>
              <% @bookings.each do |booking| %>
              <li> : <%= booking.date %> </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="container">
    <%= simple_form_for [@project, @booking] do |f| %>
    <div class="input-group input-daterange" style="width: 300px">
      <%= f.input :start_date, as: :fake, input_html: { class: "form-control datepicker"} %>
      <%= f.input :end_date, as: :fake, input_html: { class: "form-control datepicker"} %>
    </div>
    <br>
    <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>




  <%= @project.address %>
  <%= @project.latitude %>
  <%= @project.longitude %>




  <div id="map" style="height: 300px; width: 300px">
    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).ready(function() {
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
    markers = handler.addMarkers([{ lat: <%= @project.latitude %>, lng: <%= @project.longitude %> }]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    if (markers.length == 0) {
    handler.getMap().setZoom(2);
  } else if (markers.length == 1) {
  handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>
</div>


</div>
</div>
