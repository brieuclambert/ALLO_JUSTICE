<div class="container">

<h1>Welcome <%=@user.first_name%> </h1>

  <div class="col-xs-12 col-sm-4" id="section">
    <div class="row" style="background-color: #EDEFF0;">
    <h2>Your profile</h2>
    <p>Name : <%=@user.first_name%> <%=@user.last_name%>
    </p>
    </div>
  </div>

  <div class="col-xs-12 col-sm-4" id="section">
    <div class="row" style="background-color: #EDEFF0;">
    <h2>Your projects</h2>
      <% @projects.each do |project| %>
      <div class="col-xs-12 col-sm-12">
        <div class="card" style="background-color: #384259;">
          <div class="card-category"> <%= link_to project.name, project_path(project) %> </div>
          <div class="card-description">
            <h2> <%= project.description %> </h2>
            <h3> <%= project.goal %>€ </h3>
          </div>
          <img class="card-user avatar" src="">
        </div>
      </div>
      <% end %>
    </div>
    <p>
  </div>

  <div class="col-xs-12 col-sm-4" id="section">
    <div class="row" style="background-color: #EDEFF0;">
    <h2>Your contribution</h2>
      <% @contributions.each do |contribution| %>
      <div class="col-xs-12 col-sm-12">
        <div class="card" style="background-color: #384259;">
          <div class="card-category"> <%= contribution.project.name %></div>
          <div class="card-description">
            <h3> <%= contribution.amount %> € </h3>
          </div>
          <img class="card-user avatar" src="">
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
